@model TimeSheetGistics.Data.TimeCard

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TimeCard</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Hours)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Hours)
            @Html.ValidationMessageFor(model => model.Hours)
        </div>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.TimeSheetId, "ParentTimeSheet")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TimeSheetId", String.Empty)
            @Html.ValidationMessageFor(model => model.TimeSheetId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TaskDetails)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TaskDetails)
            @Html.ValidationMessageFor(model => model.TaskDetails)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
